{
    "Parameters": {
        "pDbName": {
            "Type": "String"
        },
        "pDbUser": {
            "Type": "String"
        },
        "pDbPass": {
            "Type": "String",
            "Description": "It should be less than 8 characters"
        }
    },
    "Resources": {
        "SQLShackDemoDbInstance": {
            "Type": "AWS::RDS::DBInstance",
            "Properties": {
                "DBName": {
                    "Ref": "pDbName"
                },
                "MasterUsername": {
                    "Ref": "pDbUser"
                },
                "MasterUserPassword": {
                    "Ref": "pDbPass"
                },
                "Engine": "MySQL",
                "DBInstanceClass": "db.t2.micro",
                "StorageType": "gp2",
                "PubliclyAccessible": true,
                "AllocatedStorage": "20",
                "DBInstanceIdentifier": {
                    "Fn::Join": [
                        "-",
                        [
                            "SQLShackDemoDbInstance",
                            {
                                "Ref": "AWS::Region"
                            }
                        ]
                    ]
                },
                "AvailabilityZone": {
                    "Fn::Select": [
                        1,
                        {
                            "Fn::GetAZs": ""
                        }
                    ]
                }
            }
        }
    }
}
